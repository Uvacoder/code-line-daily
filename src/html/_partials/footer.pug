footer.hf
  a.hf__inner(href=siteURL)
    span.hf__logo
      img(src="/gfx/svg/cld-logo.svg", alt="Code Line Daily Icon", inline="true")
    h1.hf__title #{siteName}
  ul.hf__inner
    each menuValue, menuIndex in menu
      li
        a(href=encodeURIComponent(menuValue.href))
          span= menuValue.title
  ul.hf__inner
    each menuValue, menuIndex in menu2
      li
        if(menuValue.title === "Twitter")
          a(href=encodeURIComponent(menuValue.href), rel="me")
            span= menuValue.title
        else
          a(href=encodeURIComponent(menuValue.href))
            span= menuValue.title
