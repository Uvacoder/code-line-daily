.hf
  .w.w--beta.hf__inner
    a.hf__skip(href="#main")= "Skip to main content"
    a.hf__logo(href=siteURL)
      .hf__img
        img.hf__src(src="/gfx/svg/cld-logo.svg", alt="Code Line Daily Icon", inline="true")
      .hf__cld #{siteName}
    nav.hf__nav
      ul.hf__list
        each menuValue, menuIndex in menu2
          - var currentClass = menuValue.title == pageTitle ? 'hf__link active' : 'hf__link';
          li.hf__item
            a(class=currentClass, href=menuValue.href)= menuValue.title

